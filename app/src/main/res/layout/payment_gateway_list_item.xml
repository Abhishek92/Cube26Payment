<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/payment_gateway_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        />
    
    <TextView
        android:id="@+id/payment_gateway_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/payment_gateway_thumbnail"
        android:layout_marginLeft="8dp"
        android:text="Paypal"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/payment_gateway_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/payment_gateway_thumbnail"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/payment_gateway_name"
        android:layout_marginTop="8dp"
        android:text="Paypal"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="15sp"/>


</RelativeLayout>